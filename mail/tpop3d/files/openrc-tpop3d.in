#!/sbin/openrc-run

# You may wish to use the following variables to fine-tune startup:
#tpop3d_flags="..."

name="tpop3d"

stop_post()
{
  rm -f $pidfile
}

# set defaults

command=%%PREFIX%%/sbin/tpop3d
required_files=%%PREFIX%%/etc/tpop3d.conf
pidfile=/var/run/tpop3d.pid

: ${tpop3d_flags="-f ${required_files} -p ${pidfile}"}
