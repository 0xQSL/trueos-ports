name="lightdm"
description="The Simple Login Manager (SLiM)"
command=/usr/local/sbin/lightdm
command_args=""
start_stop_daemon_args="--background"
pidfile="/var/run/lightdm.pid"

depend(){
        provide xlogin
        keyword -login -shutdown
        need localmount dbus hald
}
